<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.example">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="Order Food"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".menu.MainActivitySearch"
            android:parentActivityName=".Search"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".menu.MainActivityMenu"
            android:parentActivityName=".FirstFragment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.example.FirstFragment"/>

        </activity>
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Search"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="Instantiatable">

        </activity>
        <activity
            android:name=".FirstFragment"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="Instantiatable">

        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- android:theme="@style/AppTheme" -->

        </activity>
    </application>

</manifest>